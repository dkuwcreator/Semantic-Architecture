{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/semantic-instructions.schema.json",
  "title": "Semantic Instructions Front Matter",
  "type": "object",
  "required": ["scope", "id", "name", "owners"],
  "properties": {
    "scope": { "type": "string", "enum": ["project", "cluster", "module"] },
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "owners": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "reviewers": { "type": "array", "items": { "type": "string" } },
    "contract": {
      "type": "object",
      "properties": {
        "invariants": { "type": "array", "items": { "type": "string" } },
        "validation": {
          "type": "object",
          "properties": {
            "tests": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "change_policy": {
      "type": "object",
      "properties": {
        "allowed_changes": { "type": "array", "items": { "type": "string" } },
        "escalation": { "type": "string" }
      },
      "additionalProperties": true
    },
    "meta": { "type": "object" }
  },
  "additionalProperties": true
}
